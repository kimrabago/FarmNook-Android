<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"
    tools:context=".views.settings.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:contentDescription="@string/back_button"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/edit_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/edit_profile"
            android:textColor="@color/dark_green"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:id="@+id/ll_input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_circle" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_rounded_box"
                android:drawablePadding="25dp"
                android:drawableStart="@drawable/user_icon"
                android:fontFamily="@font/dm_sans_medium"
                android:hint="@string/first_name"
                android:padding="12dp"
                android:textColorHint="@color/dark_green" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/register_rounded_box"
                android:drawablePadding="25dp"
                android:drawableStart="@drawable/user_icon"
                android:fontFamily="@font/dm_sans_medium"
                android:hint="@string/last_name"
                android:padding="12dp"
                android:textColorHint="@color/dark_green" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/register_rounded_box"
                android:drawablePadding="24dp"
                android:drawableStart="@drawable/email_icon"
                android:fontFamily="@font/dm_sans_medium"
                android:hint="@string/email"
                android:padding="12dp"
                android:textColorHint="@color/dark_green" />

            <EditText
                android:id="@+id/phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/register_rounded_box"
                android:drawablePadding="25dp"
                android:drawableStart="@drawable/number_icon"
                android:fontFamily="@font/dm_sans_medium"
                android:hint="@string/phone_number"
                android:padding="12dp"
                android:textColorHint="@color/dark_green" />

            <!-- Change Password as Button -->
            <Button
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/register_rounded_box"
                android:drawableEnd="@drawable/right_arrow"
                android:drawableTint="@color/dark_green"
                android:fontFamily="@font/dm_sans_medium"
                android:textSize="18sp"
                android:text="@string/change_password"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textAlignment="textStart"/>

            <!-- Delete Account as Button -->
            <Button
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/register_rounded_box"
                android:drawablePadding="20dp"
                android:drawableTint="@color/dark_green"
                android:fontFamily="@font/dm_sans_medium"
                android:padding="12dp"
                android:textSize="18sp"
                android:text="@string/delete_account"
                android:drawableEnd="@drawable/right_arrow"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/save_profile_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_rounded"
                android:fontFamily="@font/poppins"
                android:padding="5dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
