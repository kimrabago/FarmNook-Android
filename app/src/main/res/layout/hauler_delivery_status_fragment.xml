<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hauler.HaulerDeliveryStatusFragment">

    <!-- Main Content Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/delStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Status"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"/>

            <!-- WebView for Live Map -->
            <WebView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Bottom Sheet Layout for Delivery Info -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/half_border"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Delivery Information -->
        <LinearLayout
            android:id="@+id/deliveryInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Card for From-To Addresses -->
            <androidx.cardview.widget.CardView
                android:id="@+id/haulerToPickupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/delivery_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/green_rounded_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/from_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Address"
                        android:textSize="14sp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/to_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destination Address"
                        android:textSize="14sp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Distance and Time Info -->
            <RelativeLayout
                android:id="@+id/kmAndHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginHorizontal="70dp">

                <ImageView
                    android:id="@+id/kilometerImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/km_icon"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/totalKilometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 km"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/kilometerImage"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp" />

                <ImageView
                    android:id="@+id/durationImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/duration_icon"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/durationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 min"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/durationImage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <!-- Delivery Status Section -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/green_rounded">

                <TextView
                    android:id="@+id/statusTxtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Checking..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/dm_sans"
                    android:layout_toEndOf="@id/statusTxtview"
                    android:layout_marginStart="8dp"
                    android:background="@color/cream"
                    android:padding="5dp"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <!-- Rate Button (optional action) -->
            <Button
                android:id="@+id/btnRateDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="40dp"
                android:text="Rate Delivery"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:padding="12dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
