<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hauler.DeliveryHistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

            <TextView
            android:id="@+id/delHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_history"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/half_border"
            android:padding="30dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- This Week Section -->
                <TextView
                    android:id="@+id/this_week_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_week"
                    android:textSize="18sp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/this_week_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/message_item"
                    android:nestedScrollingEnabled="false"/>

                <!-- This Month Section -->
                <TextView
                    android:id="@+id/this_month_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_month"
                    android:textSize="18sp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/this_month_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/message_item"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>