<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.farmer.add_delivery.AddDeliveryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_delivery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/add_delivery"
            android:textColor="@color/dark_green"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/half_border"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/add_delivery_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/add_delivery_description"
                android:textColor="@color/dark_green"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/from_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/from_icon"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/from" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fromButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/from_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/from"
                        android:textColor="@color/dark_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/from_location"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="@string/from_location"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/from_box"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/to_icon"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/to" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/to_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/to"
                        android:textColor="@color/dark_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/to_location"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="@string/please_enter"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/purpose_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/to_box"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vehicle_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/delivery"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/purposeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="Purpose"
                        android:textColor="@color/dark_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/purposeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:backgroundTint="@color/dark_green" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_type_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/purpose_box"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/product_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/product"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/productTypeTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/product_type"
                        android:textColor="@color/dark_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/productTypeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/dm_sans_bold"
                        android:hint="@string/please_enter"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weight_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/product_type_box"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weight_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/weight"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/weightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/weight"
                        android:textColor="@color/dark_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/weightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/dm_sans_bold"
                        android:hint="@string/please_enter"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/initEstimatedCostTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_box"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/initial_estimated_cost"
                android:textColor="@color/dark_green"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/initEstimatedCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_box"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/initEstimatedCostTxtView"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/p_600"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <Button
                android:id="@+id/proceedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/initEstimatedCost"
                android:layout_marginVertical="15dp"
                android:background="@drawable/green_rounded_button"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/proceed"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/proceedButton"
                android:background="@drawable/red_rounded_button"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>