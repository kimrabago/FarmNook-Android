<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/farmnook_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/farmnook_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmNook"
        tools:targetApi="31">
        <activity
            android:name=".views.message.MessageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.message.NewMessageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.mapbox.token"
            android:value="@string/mapbox_access_token" />

        <activity
            android:name=".views.farmer.WaitingDeliveryActivity"
            android:exported="true" />
        <activity
            android:name=".views.farmer.DeliveryConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".views.farmer.SetScheduleActivity"
            android:exported="true" />
        <activity
            android:name=".views.farmer.RecommendationActivity"
            android:exported="true" />
        <activity
            android:name=".views.farmer.AddDeliveryActivity"
            android:exported="true" />
        <activity
            android:name=".views.auth.DeleteAccountActivity"
            android:exported="true" />
        <activity
            android:name=".views.hauler.subscription.AccountBoostedActivity"
            android:exported="true" />
        <activity
            android:name=".views.auth.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.FeedbackActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.ReportActivity"
            android:exported="true" />
        <activity
            android:name=".views.hauler.subscription.SubscriptionActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.AboutActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.HaulerProfileActivity"
            android:exported="true" />
        <activity
            android:name=".views.settings.NotificationActivity"
            android:exported="true" />
        <activity
            android:name=".views.hauler.DeliveryDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".views.menu.BottomNavigationBar"
            android:exported="true" />
        <activity
            android:name=".views.StartingPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.auth.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".views.auth.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".views.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>